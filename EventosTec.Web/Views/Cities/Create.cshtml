@model EventosTec.Web.Models.Entities.City

@{
    ViewData["Title"] = "Create";
}

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>Nueva Ciudad</h2>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ciudad"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Descripción"/>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Slung" class="control-label"></label>
                            <input asp-for="Slung" class="form-control" placeholder="MX"/>
                            <span asp-validation-for="Slung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-success btn-sm" />
                            <a asp-action="Index" class="btn btn-success btn-sm">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
